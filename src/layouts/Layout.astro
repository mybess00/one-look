---
export interface Props {
	title: string;
}

const { title } = Astro.props;
const description = "One Look es un unificador de enlaces que surge como una alternativa de c√≥digo abierto y autohospedado a herramientas como Linktree, ContactInBio, Linkpop, Campsite y Bio.Link."
---

<!DOCTYPE html>
<html lang="en" data-theme="cupcake">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<script type="text/javascript" src="../node_modules/tw-elements/dist/js/tw-elements.umd.min.js"></script>
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="keywords" content="onelook, linktree, biolink, organizador de enlaces, link" />
		<meta name="author" content="Rafael PLanas" />
		<meta name="og:title" content={title} />
		<meta name="og:description" content={description} />
		<meta name="og:image" content="/opengraph.jpg" />
		<meta name="twitter:card" content="sumary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
