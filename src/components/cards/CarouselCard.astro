---
export interface Props {
    title: string,
    description: string,
    button: Object,
    picture: any[],
} 

const { title, description, button, picture} = Astro.props

---

<div class="card card-compact bg-base-100 shadow-xl overflow-hidden">
    <div class="carousel w-full">
        {picture.map((image, index, arr) => {
            return  <div id={`slide${index+1}`} class="carousel-item relative w-full">
                        <img src={image.content} alt={image.alt} class="w-full" />
                        <div class="absolute flex justify-between transform -translate-y-1/2 left-5 right-5 top-1/2">
                            <a href={`#slide${index == 0 ? arr.length : index}`} class="btn btn-circle">❮</a> 
                            <a href={`#slide${index+1 == arr.length ? '1' : index+2}`} class="btn btn-circle">❯</a>
                        </div>
                    </div> 
        })}
    </div>
    <div class="card-body">
      <h2 class="card-title">
        {title}
      </h2>
      <p class="card-description">{description}</p>
      <div class="card-actions justify-end">
        <a class='btn btn-primary' target="_blank" href={`https://${button.link}`}>
            {button.label}
        </a>
      </div>
    </div>
</div>
