---
export interface Props {
    title: string,
    description: string,
    picture: Object,
    button: Object
}

const { title, description, picture, button } = Astro.props
---

<div class="card card-side bg-base-100 shadow-xl horizontalCard">
    <figure class="w-[130%] min-w-[8em]">
        <img src={picture.content} alt={picture.alt} class="h-full"/>
    </figure>
    <div class="card-body p-4">
      <h2 class="card-title">{title}</h2>
      <p>{description}</p>
      <div class="card-actions justify-end">
        <a class='btn btn-primary' target="_blank" href={button.link}>
            {button.label}
        </a>
      </div>
    </div>
</div>