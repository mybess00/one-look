---
export interface Props {
    title: string,
    description: string,
    picture: Object,
    button: Object
}

const { title, description, picture, button } = Astro.props
---


<div class="card bg-base-200 shadow-xl image-full no-mobile:text-[20px]">
    <figure><img src={picture.content} alt={picture.alt} /></figure>
    <div class="card-body">
      <h2 class="card-title">{title}</h2>
      <p>{description}</p>
      <div class="card-actions justify-end">
        <a class='btn btn-primary' target="_blank" href={button.link}>
            {button.label}
        </a>
      </div>
    </div>
</div>